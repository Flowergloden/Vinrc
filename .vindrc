" remote repo
 source Flowergloden/Vinrc

" default mapping
version tiny

" init mode
set initmode = r

" block-style caret
set blockstylecaret = true
set blockstylecaret_mode = flex

" auto window focus
set autotrack_popup = true

" easy-click cache
set uiacachebuild = true

" shell
set shell = wt

" mode switch
map <Esc-Esc> <to_resident>
map <Esc-[> <to_gui_normal>
map <Esc-]> <to_edi_normal>
rmap <Esc-[> <to_gui_normal>
rmap <Esc-]> <to_edi_normal>
